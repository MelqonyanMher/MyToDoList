<Window x:Class="MyToDoList.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyToDoList.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="384">
    <Grid Margin="0,0,2,0">
        <TextBox x:Name="addTaskTextBox" HorizontalAlignment="Left" Height="23" Margin="40,10,0,0" TextWrapping="Wrap" Text="Add Your Task" VerticalAlignment="Top" Width="265"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="320,10,0,0" VerticalAlignment="Top" Width="25" Height="23"/>
        <ListBox x:Name="toDoListBox" HorizontalAlignment="Left" Height="350" Margin="40,50,0,0" VerticalAlignment="Top" Width="305"/>
        <TextBlock x:Name="taskTextBlock" HorizontalAlignment="Left" Margin="40,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="265"/>

    </Grid>
</Window>
